@model AdminSeguridad.Models.Usuario

<h2>Eliminar Usuario</h2>

<div class="alert alert-danger">
    <h4>¿Está seguro de que desea eliminar este usuario?</h4>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.usuario</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Primer Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido1</dd>

        <dt class="col-sm-2">Segundo Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido2</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@Model.Rol?.NombreRol</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="UsuarioID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
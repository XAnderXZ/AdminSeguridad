@model LoginViewModel

<form asp-action="Login" method="post">
    <div>
        <label>Email</label>
        <input type="email" name="email" required />
    </div>
    <div>
        <label>Contraseña</label>
        <input type="password" name="password" required />
    </div>
    <button type="submit">Iniciar Sesión</button>
</form>
